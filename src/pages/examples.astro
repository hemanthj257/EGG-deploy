---
import Layout from "../layouts/Layout.astro";
import { examples } from "../scripts/egg-examples.js";
---

<Layout title="EGGlang Examples">
  <section class="examples-section">
    <h1>EGGlang Examples</h1>
    <p>Explore example programs to get started with EGGlang programming.</p>

    <div class="examples-list">
      {
        examples.map((example) => (
          <div class="example-card">
            <h3>{example.name}</h3>
            <p>{example.description}</p>
            <pre>
              <code>{example.code}</code>
            </pre>
          </div>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  .examples-section {
    padding: 2rem 1rem;
    text-align: center;
  }

  .examples-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .example-card {
    background-color: #fff;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: left;
  }

  .example-card h3 {
    color: var(--color-dark);
    margin-bottom: 0.5rem;
  }

  .example-card p {
    color: #666;
    margin-bottom: 1rem;
  }

  .example-card pre {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }
</style>
